<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.text.*?>
<?import javafx.geometry.*?>
<?import javafx.collections.*?>
<?import javafx.scene.image.*?>
<?import java.lang.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.layout.VBox?>
<?import javafx.collections.FXCollections?>

<VBox xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.EatingPlanController">
   <children>
      <Label text="            Eating and Workout Tracker:                   ">
         <VBox.margin>
            <Insets left="10.0" />
         </VBox.margin>
         <font>
            <Font name="Bauhaus 93" size="22.0" />
         </font></Label>
      <HBox>
         <children>
         
         
            <VBox prefHeight="200.0" prefWidth="290.0">
               <children>
                  <Label text="Today">
                     <VBox.margin>
                        <Insets left="10.0" />
                     </VBox.margin></Label>
                  <Label text="Add your meals">
                     <VBox.margin>
                        <Insets left="10.0" />
                     </VBox.margin></Label>
                  <HBox prefHeight="100.0" prefWidth="200.0">
                     <children>
                        <ChoiceBox fx:id="meals" prefWidth="30.0">
                        <items>
            		<FXCollections fx:factory="observableArrayList">
            			<Integer fx:value="1" />
            			<Integer fx:value="2" />
            			<Integer fx:value="3" />
            			<Integer fx:value="4" />
            			<Integer fx:value="5" />
            			<Integer fx:value="6" />
            			<Integer fx:value="7" />
            			<Integer fx:value="8" />
            		</FXCollections>
            		</items>
                           <HBox.margin>
                              <Insets left="10.0" />
                           </HBox.margin>
                        </ChoiceBox>
                        <Button mnemonicParsing="false" onAction="#getMeals" prefWidth="50.0" text="Add">
                           <HBox.margin>
                              <Insets left="10.0" right="10.0" />
                           </HBox.margin></Button>
                     </children></HBox>
                  <Label text="Add your workouts (optional)">
                     <VBox.margin>
                        <Insets left="10.0" />
                     </VBox.margin></Label>
                  <HBox prefHeight="100.0" prefWidth="200.0">
                     <children>
                        <ChoiceBox fx:id="workouts" prefWidth="40.0">
                        <items>
            		<FXCollections fx:factory="observableArrayList">
            			<Integer fx:value="1" />
            			<Integer fx:value="2" />
            			<Integer fx:value="3" />
            		</FXCollections>
            		</items>
                           <HBox.margin>
                              <Insets left="10.0" />
                           </HBox.margin>
                        </ChoiceBox>
                        <Button mnemonicParsing="false" onAction="#getWorkouts" prefWidth="50.0" text="Add">
                           <HBox.margin>
                              <Insets left="10.0" right="10.0" />
                           </HBox.margin></Button>
                     </children></HBox>
                  <Button mnemonicParsing="false" onAction="#setCalCountLabel" text="Calorie check">
                  <VBox.margin>
                              <Insets left="10.0" />
                           </VBox.margin>
                  </Button>
                  <Label fx:id="calCount" prefWidth="600.0" text="" />
               </children>
            </VBox>
            
            
         </children>
      </HBox>
      <Button mnemonicParsing="false" onAction="#newDay" prefHeight="18.0" prefWidth="96.0" text="New day">
         <VBox.margin>
            <Insets bottom="15.0" left="65.0" />
         </VBox.margin></Button>
      <Button mnemonicParsing="false" onAction="#switchToMainMenu" prefHeight="18.0" prefWidth="96.0" text="Main Menu">
         <VBox.margin>
            <Insets bottom="15.0" left="65.0" />
         </VBox.margin></Button>
   </children>
</VBox>
