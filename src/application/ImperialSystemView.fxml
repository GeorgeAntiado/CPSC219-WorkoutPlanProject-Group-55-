<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import java.lang.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.ImperialSystemController">
   <children>
      <Label contentDisplay="CENTER" layoutX="200.0" text="Imperial System">
         <VBox.margin>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </VBox.margin></Label>
      <HBox>
         <children>
            <Label text="Height">
               <HBox.margin>
                  <Insets bottom="10.0" left="10.0" />
               </HBox.margin></Label>
            <TextField fx:id="userHeightFT">
               <HBox.margin>
                  <Insets bottom="10.0" left="10.0" />
               </HBox.margin></TextField>
            <Label text="ft">
               <HBox.margin>
                  <Insets bottom="10.0" left="5.0" right="5.0" />
               </HBox.margin></Label>
            <TextField fx:id="userHeightInch">
               <HBox.margin>
                  <Insets bottom="10.0" left="5.0" />
               </HBox.margin></TextField>
            <Label text="inches">
               <HBox.margin>
                  <Insets bottom="10.0" left="5.0" right="10.0" />
               </HBox.margin></Label>
         </children>
      </HBox>
      <HBox>
         <children>
            <Label text="Weight">
               <HBox.margin>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </HBox.margin></Label>
            <TextField fx:id="userWeightLBS">
               <HBox.margin>
                  <Insets bottom="10.0" top="5.0" />
               </HBox.margin></TextField>
            <Label text="lbs">
               <HBox.margin>
                  <Insets bottom="10.0" left="5.0" right="10.0" top="5.0" />
               </HBox.margin></Label>
         </children>
      </HBox>
      <Label fx:id="errorLabel2" text="" textFill="RED"> 
            <VBox.margin>
            	<Insets bottom="10" left="10" right="10" top="10" />
            </VBox.margin>
      </Label>
      <Button mnemonicParsing="false" onAction="#switchToCalorieCalculatorScene" text="Done">
         <VBox.margin>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </VBox.margin></Button>
   </children>
</VBox>
